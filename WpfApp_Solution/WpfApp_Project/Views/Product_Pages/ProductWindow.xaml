<Window x:Class="WpfApp_Project.Views.Product_Pages.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Project.Views.Product_Pages"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Filtrar por nome:"/>
                <TextBox Width="100" Margin="5" Text="{Binding FilterName}" />
                
              
                <Label Content="Menor valor"/>
                <TextBox Width="100" Margin="5" Text="{Binding FilterMinPrice, UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="Maior valor"/>
                <TextBox Width="100" Margin="5" Text="{Binding FilterMaxPrice, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Filtrar por Intervalo" Width="120" VerticalAlignment="Top" Margin="5"  
                Command="{Binding FiltredProductRange}" />
            </StackPanel>

            <DataGrid x:Name="dataGridProducts" ItemsSource="{Binding FiltredProducts}" AutoGenerateColumns="False" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Name,  UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    <DataGridTextColumn Header="Código" Binding="{Binding Code,  UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                    <DataGridTextColumn x:Name="DecimalInput" Header="Valor" Binding="{Binding Price,  UpdateSourceTrigger=PropertyChanged}" Width="100"/>


                    <DataGridTemplateColumn Header="Ações" Width="350">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Width="60" Margin="5" Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                    </Button>
                                    <Button Content="Excluir" Width="60" Margin="5" Command="{Binding DataContext.ExcludeCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                    </Button>
                                    <Button Content="Salvar" Width="60" Margin="5" Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
